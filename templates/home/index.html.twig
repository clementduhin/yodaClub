                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="container-fluid containerContact py-5">
            <div class="container" id="contact">
        <h2 class="titleHeadContainer">Contact</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                 {{ form_start(formContact) }}
                    <div class="row">
                        <div class="col-12 col-lg-6 mt-3">
                            {{ form_widget(formContact.lastname, {attr: {'class': 'form-control champType', 'placeholder': 'Nom'}}) }}
                        </div>
                        <div class="col-12 col-lg-6 mt-3">

                            {{ form_widget(formContact.firstname, {attr: {'class': 'form-control champType', 'placeholder': 'Prénom'}}) }}
                        </div>
                    </div>
                    <div class="mt-3">

                        {{ form_widget(formContact.subject, {attr: {'class': 'form-control champType', 'placeholder': 'Objet'}}) }}
                    </div>
                    <div class="mt-3">

                        {{ form_widget(formContact.sender, {attr: {'class': 'form-control champType', 'placeholder': 'Votre email'}}) }}
                    </div>
                    <div class="mt-3">

                        {{ form_widget(formContact.message, {attr: {'class': 'form-control champType', 'placeholder': 'Message'}}) }}
                    </div>
                    <div class="row mt-5">
                        
        
                        <div class="col text-center">{{ form_widget(formContact.Envoyer, {attr: {'class': 'btn btn-success' }}) }}
                        </div>
                        <div class="col text-center">{{ form_widget(formContact.Annuler, {attr: {'class': 'btn btn-danger' }}) }}
                        </div>
                    </div>
                {{ form_end(formContact) }} 
            </div>
        </div>
    </div>
    </div>



    <div class="container-fluid footer">
        <div class="container footer d-flex justify-content-between align-items-center">
