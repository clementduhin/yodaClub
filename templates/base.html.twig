<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="logo.ico" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
            
    </head>
    <body>

    <div class='container-fluid'>

    <div class='container containerNav '>
        <nav class='navbar navbar-expand-lg navbar-dark maNav'>
                    <div>
                <a class='navbar-brand' href='{{ path('home') }}'><img class='logoNav' src='img/logoTransp.png' alt='' /></a>
            </div>

            <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarColor01' aria-controls='navbarColor01' aria-expanded='false' aria-label='Toggle navigation'>
                <span class='navbar-toggler-icon'></span>
            </button>

            <div class='collapse navbar-collapse mobileAbsolute' id='navbarColor01'>
                <ul class='navbar-nav '>
                    <li class='nav-item px-3'>
                        <a class='nav-link' href='{{ path('home') }}#presentation'>Présentation</a>
                    </li>
                    <li class='nav-item px-3'>
                        <a class='nav-link' href='{{ path('home') }}#news'>News</a>
                    </li>
                    <li class='nav-item px-3'>
                        <a class='nav-link' href='{{ path('home') }}#tournois'>Tournois</a>
                    </li>
                    <li class='nav-item px-3'>
                        <a class='nav-link' href='{{ path('home') }}#classement'>Classement</a>
                    </li>
                    <li class='nav-item px-3'>
                        <a class='nav-link' href='{{ path('home') }}#contact'>Contact</a>
                    </li>

                </ul>
            </div>
        </nav>
                 {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.validation  == true %}
                    
                    <div class='nav-item px-3'>
                        <a href="{{ path('tournois') }}" class='btn btn-secondary btnTournois'>Voir les tournois</a>
                    </div>
                    <div class='nav-item px-3'>
                        <a href="{{ path('app_logout') }}" class='btn btn-danger'>Déconnexion</a>
                    </div>

                    {% elseif is_granted('IS_AUTHENTICATED_FULLY') and app.user.validation  == false %}
                        
                    <div class='nav-item px-3'>
                        <a href="{{ path('app_logout') }}" class='btn btn-danger'>Déconnexion</a>
                    </div>

                    {% else %}
                    
                    <div class='nav-item px-3'>
                        <a href="{{ path('app_login') }}" class='btn btn-primary'>Connexion</a>
                    </div>

                    <div class='nav-item px-3'>
                        <a href="{{ path('app_registration') }}" class='btn btn-success'>Inscription</a>
                    </div>

                {% endif %} 

                    
    </div>
</div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.validation  == true %}

        {% if placeJoueurCo is defined  %}
                <div class="messageClassement">
                    <div class="alert alert-primary">{{ app.user.points }} points <br> {{ placeJoueurCo }} {% if placeJoueurCo == 1 %}ere {% else %}eme
                    {% endif %} place</div>
                </div>
        
        {% endif %}


    
    {% endif %}




        {% block body %}
        
            
        
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>


