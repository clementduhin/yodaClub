{% extends "base.html.twig" %}


{% block body %}

<div class="container tableauTournois">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">Lieu</th>
                <th scope="col">Participation</th>
                <th scope="col">Place</th>
            </tr>
        </thead>
        <tbody>
        {% for tournoi  in tournois %}
            <tr>
                <td scope="col">{{ tournoi.date | date('d/m/Y') }} </td>
                <td scope="col">{{ tournoi.date | date('H:i') }}</td>
                <td scope="col">{{ tournoi.lieu }}</td>
                    {% if tournoi.users | length == tournoi.placeDispo %}
                        
                        <td scope="col"><button class="btn btn-danger btnParticipation">Complet</button></td>

                    {% else %}
                        <td scope="col"><a href=" {{ path('tournois') }}/{{ tournoi.id }}" class="btn btn-success btnParticipation">Participer</a></td>
                    
                    {% endif %}
                <td scope="col">{{ tournoi.users | length }} / {{ tournoi.placeDispo }}</td>

        

            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>

{% endblock %}

