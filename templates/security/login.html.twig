{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.firstname }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}


        <h3 class="mb-3 policeStarWars">Connexion</h3>
        <label for="inputUsername">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-12 col-lg-6 champType" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control col-12 col-lg-6 champType" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary mt-5" type="submit">
            Se connecter
        </button>

    </div>
</form>
{% endblock %}

